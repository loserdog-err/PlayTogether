<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/menu_text_appearance</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/primary_color2</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@color/white_small_alpha</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <!--<item name="android:windowBackground">@mipmap/main_bg</item>-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.LoginTheme" parent="AppTheme.NoActionBar">
        <item name="android:textColorHint">@color/white_big_alpha</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/main_bg</item>
    </style>

    <style name="drawer_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tablayout_style" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="selectPopupWindowAnim">
        <item name="android:windowEnterAnimation">@anim/popup_window_open</item>
        <item name="android:windowExitAnimation">@anim/popup_window_close</item>
    </style>
    <!--筛选条件的popupwindow动画-->
    <style name="category_filter_popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/category_filter_popupwindow_open</item>
        <item name="android:windowExitAnimation">@anim/category_filter_popupwindow_close</item>
    </style>

    <!--选择头像时弹出的popupwindow动画-->
    <style name="select_avatar_popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/popup_window_select_list_open</item>
        <item name="android:windowExitAnimation">@anim/popup_window_select_list_close</item>
    </style>

    <style name="chat_home_menu_popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/popup_window_chat_home_menu_open</item>
        <item name="android:windowExitAnimation">@anim/popup_window_chat_home_menu_close</item>
    </style>

    <style name="toolbar_text_appearance">
        <item name="android:textColor">@color/white_little_alpha</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="menu_text_appearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--录音时弹出的dialog-->
    <style name="Theme_AudioDialog" parent="android:Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


</resources>
