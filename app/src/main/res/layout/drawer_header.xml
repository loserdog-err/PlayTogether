<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="420px"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:background="@mipmap/drawer_header_bg"/>

    <com.chenantao.playtogether.mvc.view.widget.MultipleShapeImg
        android:id="@+id/ivAuthorAvatar"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280px"
        android:src="@mipmap/avatar"
        app:type="round"/>

    <TextView
        android:id="@+id/tvUsername"
        style="@style/big_large_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="100px"
        android:text="陈岸涛"
        android:textStyle="bold"/>

</com.chenantao.autolayout.AutoFrameLayout>